<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<Accordion maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
           prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="Controller.MainController">
    <panes>
        <TitledPane animated="false" text="Create Repo">
            <content>
                <BorderPane minHeight="250.0" minWidth="400.0">
                    <center>
                        <GridPane hgap="10.0" vgap="10.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="20.0"
                                                   prefWidth="100.0"/>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="15.0"
                                                   prefWidth="100.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" percentHeight="32.0" prefHeight="30.0"
                                                vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" percentHeight="32.0" prefHeight="30.0"
                                                vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" percentHeight="32.0" prefHeight="30.0"
                                                vgrow="SOMETIMES"/>
                            </rowConstraints>
                            <children>
                                <Label text="Source folder:"/>
                                <Label GridPane.rowIndex="1" text="Target folder:"/>
                                <Label GridPane.rowIndex="2" text="Repository name:"/>
                                <Button GridPane.columnIndex="2" GridPane.halignment="RIGHT"
                                        mnemonicParsing="false" onMouseClicked="#chooseDirectory" text="Browse..."
                                        fx:id="selectCreateSource"/>
                                <Button GridPane.columnIndex="2" GridPane.halignment="RIGHT"
                                        GridPane.rowIndex="1" mnemonicParsing="false" onMouseClicked="#chooseDirectory"
                                        text="Browse..." fx:id="selectCreateTarget"/>
                                <TextField GridPane.columnIndex="1" promptText="Source folder path, e.g. C:\Users\..."
                                           fx:id="createSource"/>
                                <TextField GridPane.columnIndex="1" GridPane.rowIndex="1"
                                           promptText="Target folder path, e.g. C:\Users\..." fx:id="createTarget"/>
                                <TextField GridPane.columnIndex="1" GridPane.rowIndex="2"
                                           promptText="Enter an optional name" fx:id="repoNameField"/>
                            </children>
                            <BorderPane.margin>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </BorderPane.margin>
                        </GridPane>
                    </center>
                    <bottom>
                        <Button BorderPane.alignment="CENTER" mnemonicParsing="false" onMouseClicked="#createRepo"
                                text="Create Repository" fx:id="createRepo"/>
                    </bottom>
                </BorderPane>
            </content>
        </TitledPane>
        <TitledPane animated="false" text="Check In">
            <content>
                <BorderPane minHeight="250.0" minWidth="400.0">
                    <center>
                        <GridPane hgap="10.0" vgap="10.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="20.0"
                                                   prefWidth="100.0"/>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="15.0"
                                                   prefWidth="100.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" percentHeight="32.0" prefHeight="30.0"
                                                vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" percentHeight="32.0" prefHeight="30.0"
                                                vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" percentHeight="32.0" prefHeight="30.0"
                                                vgrow="SOMETIMES"/>
                            </rowConstraints>
                            <children>
                                <Label text="Source folder:"/>
                                <Label GridPane.rowIndex="1" text="Target folder:"/>
                                <Button GridPane.columnIndex="2" GridPane.halignment="RIGHT"
                                        mnemonicParsing="false" onMouseClicked="#chooseDirectory" text="Browse..."
                                        fx:id="selectCheckSource"/>
                                <Button GridPane.columnIndex="2" GridPane.halignment="RIGHT"
                                        GridPane.rowIndex="1" mnemonicParsing="false" onMouseClicked="#chooseDirectory"
                                        text="Browse..." fx:id="selectCheckTarget"/>
                                <TextField GridPane.columnIndex="1" promptText="Source folder path, e.g. C:\Users\..."
                                           fx:id="checkinSource"/>
                                <TextField GridPane.columnIndex="1" GridPane.rowIndex="1"
                                           promptText="Target folder path, e.g. C:\Users\..." fx:id="checkinTarget"/>
                            </children>
                            <BorderPane.margin>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </BorderPane.margin>
                        </GridPane>
                    </center>
                    <bottom>
                        <Button BorderPane.alignment="CENTER" mnemonicParsing="false" onMouseClicked="#createRepo"
                                text="Create Repository" fx:id="checkinRepo"/>
                    </bottom>
                </BorderPane>
            </content>
        </TitledPane>
    </panes>
</Accordion>
