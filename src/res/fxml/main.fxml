<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<Accordion maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
           prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="Controller.MainController">
    <panes>
        <TitledPane animated="false" text="Create Repo">
            <BorderPane minHeight="250.0" minWidth="400.0">
                <center>
                    <GridPane hgap="10.0" vgap="10.0">
                        <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="20.0"
                                               prefWidth="100.0"/>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="15.0"
                                               prefWidth="100.0"/>
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints minHeight="10.0" percentHeight="32.0" prefHeight="30.0"
                                            vgrow="SOMETIMES"/>
                            <RowConstraints minHeight="10.0" percentHeight="32.0" prefHeight="30.0"
                                            vgrow="SOMETIMES"/>
                            <RowConstraints minHeight="10.0" percentHeight="32.0" prefHeight="30.0"
                                            vgrow="SOMETIMES"/>
                        </rowConstraints>
                        <BorderPane.margin>
                            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                        </BorderPane.margin>
                        <Label text="Source folder:"/>
                        <Label GridPane.rowIndex="1" text="Target folder:"/>
                        <Label GridPane.rowIndex="2" text="Repository name:"/>
                        <Button GridPane.columnIndex="2" GridPane.halignment="RIGHT"
                                mnemonicParsing="false" onMouseClicked="#chooseDirectory" text="Browse..."
                                fx:id="selectCreateFrom"/>
                        <Button GridPane.columnIndex="2" GridPane.halignment="RIGHT" GridPane.rowIndex="1"
                                mnemonicParsing="false" onMouseClicked="#chooseDirectory" text="Browse..."
                                fx:id="selectCreateTo"/>
                        <TextField GridPane.columnIndex="1" promptText="Source folder path, e.g. C:\Users\..."
                                   fx:id="createFrom"/>
                        <TextField GridPane.columnIndex="1" GridPane.rowIndex="1"
                                   promptText="Target folder path, e.g. C:\Users\..." fx:id="createTo"/>
                        <TextField GridPane.columnIndex="1" GridPane.rowIndex="2"
                                   promptText="Enter an optional name" fx:id="repoNameField"/>
                    </GridPane>
                </center>
                <bottom>
                    <Button BorderPane.alignment="CENTER" mnemonicParsing="false" onMouseClicked="#createRepo"
                            text="Create Repository" fx:id="createRepo"/>
                </bottom>
            </BorderPane>
        </TitledPane>
        <TitledPane animated="false" text="Check In">
            <BorderPane minHeight="250.0" minWidth="400.0">
                <center>
                    <GridPane hgap="10.0" vgap="10.0">
                        <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="20.0"
                                               prefWidth="100.0"/>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="15.0"
                                               prefWidth="100.0"/>
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints minHeight="10.0" percentHeight="32.0" prefHeight="30.0"
                                            vgrow="SOMETIMES"/>
                            <RowConstraints minHeight="10.0" percentHeight="32.0" prefHeight="30.0"
                                            vgrow="SOMETIMES"/>
                            <RowConstraints minHeight="10.0" percentHeight="32.0" prefHeight="30.0"
                                            vgrow="SOMETIMES"/>
                        </rowConstraints>
                        <BorderPane.margin>
                            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                        </BorderPane.margin>
                        <Label text="Source folder:"/>
                        <Label GridPane.rowIndex="1" text="Repository folder:"/>
                        <Button GridPane.columnIndex="2" GridPane.halignment="RIGHT"
                                mnemonicParsing="false" onMouseClicked="#chooseDirectory" text="Browse..."
                                fx:id="selectCheckinFrom"/>
                        <Button GridPane.columnIndex="2" GridPane.halignment="RIGHT"
                                GridPane.rowIndex="1" mnemonicParsing="false" onMouseClicked="#chooseDirectory"
                                text="Browse..." fx:id="selectCheckinTo"/>
                        <TextField GridPane.columnIndex="1" promptText="Source folder path, e.g. C:\Users\..."
                                   fx:id="checkinFrom"/>
                        <TextField GridPane.columnIndex="1" GridPane.rowIndex="1"
                                   promptText="Target folder path, e.g. C:\Users\..." fx:id="checkinTo"/>
                    </GridPane>
                </center>
                <bottom>
                    <Button BorderPane.alignment="CENTER" mnemonicParsing="false" onMouseClicked="#checkinRepo"
                            text="Check In Repository"/>
                </bottom>
            </BorderPane>
        </TitledPane>
        <TitledPane animated="false" text="Check Out">
            <BorderPane minHeight="250.0" minWidth="400.0">
                <center>
                    <GridPane hgap="10.0" vgap="10.0">
                        <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="20.0"
                                               prefWidth="100.0"/>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="15.0"
                                               prefWidth="100.0"/>
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints minHeight="10.0" percentHeight="32.0" prefHeight="30.0"
                                            vgrow="SOMETIMES"/>
                            <RowConstraints minHeight="10.0" percentHeight="32.0" prefHeight="30.0"
                                            vgrow="SOMETIMES"/>
                            <RowConstraints minHeight="10.0" percentHeight="32.0" prefHeight="30.0"
                                            vgrow="SOMETIMES"/>
                        </rowConstraints>
                        <BorderPane.margin>
                            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                        </BorderPane.margin>
                        <Label text="Manifest file:"/>
                        <Label GridPane.rowIndex="1" text="Target folder:"/>
                        <Button GridPane.columnIndex="2" GridPane.halignment="RIGHT" mnemonicParsing="false"
                                onMouseClicked="#chooseFile" text="Browse..." fx:id="selectCheckoutFrom"/>
                        <Button GridPane.columnIndex="2" GridPane.halignment="RIGHT"
                                GridPane.rowIndex="1" mnemonicParsing="false" onMouseClicked="#chooseDirectory"
                                text="Browse..." fx:id="selectCheckoutTo"/>
                        <TextField GridPane.columnIndex="1" promptText="Source folder path, e.g. C:\Users\..."
                                   fx:id="checkoutFrom"/>
                        <TextField GridPane.columnIndex="1" GridPane.rowIndex="1"
                                   promptText="Target folder path, e.g. C:\Users\..." fx:id="checkoutTo"/>
                    </GridPane>
                </center>
                <bottom>
                    <Button BorderPane.alignment="CENTER" mnemonicParsing="false" onMouseClicked="#checkoutRepo"
                            text="Check Out Repository"/>
                </bottom>
            </BorderPane>
        </TitledPane>
    </panes>
</Accordion>
